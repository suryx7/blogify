<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <title>Blog</title>
    </head>
    <body>
        <%- include("./partials/nav") %>
        
        <div class="container mt-4">
            <h1><%= blog.title %></h1>
            <img src="/<%= blog.coverImageURL %>"  alt="Cover Image" width="700px">
            <pre class="mt-3"><%= blog.body %></pre>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px" class="rounded-circle"><%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-3">
            <form action="/blog/Comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <h1>Comments(<%= comments.length %>)</h1>
                    <% if (locals.user) { %>
                        <input type="text" class="form-control" name="content" 
                        placeholder="Enter Your Comment">
                        <button class="btn btn-sm btn-primary mt-1" type="submit">Add</button>
                    <% } %>
                </div>
            </form>
        </div>
        <div class="container mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImageURL %>" width="50px" class="rounded-circle">
                <%= comment.createdBy.fullName %>: <pre><%= comment.content %></pre>
            <% }) %>
        </div>

        <%- include("./partials/scripts") %>
    </body>
</html>
